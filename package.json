{
  "name": "@eugenechen/mac-apps-launcher-mcp-server",
  "version": "0.0.1",
  "description": "MCP server for launching applications on macOS",
  "license": "MIT",
  "type": "module",
  "bin": {
    "mcp-server": "dist/src/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/src/*.js",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "start": "node dist/src/index.js",
    "test:client": "node dist/client/test-mcp-client.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.12.1",
    "@types/node-fetch": "^2.6.12",
    "node-fetch": "^3.3.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "shx": "^0.4.0",
    "typescript": "^5.8.3"
  }
}
